<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".RemindActivity"
                                                    android:orientation="vertical"
                                                    android:gravity="center_horizontal"
                                                    android:padding="10dp">
    <EditText
            android:id="@+id/SetReminds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/translucent_edit"
            android:hint="New reminders"
            android:inputType="text"
            android:textSize="24dp"
            android:singleLine="true" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/lv_plantReports" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.71" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="300dp"
            android:layout_height="342dp"/>

    <LinearLayout   android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="30dp">
                    <Button
                            android:id="@+id/setBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="set"
                            android:layout_marginRight="20dp"/>
                    <Button
                            android:id="@+id/cancelBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cancel"/>
    </LinearLayout>

</LinearLayout>