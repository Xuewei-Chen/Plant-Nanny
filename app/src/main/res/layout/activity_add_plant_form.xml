<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".AddPlantActivity">
    <EditText
            android:id="@+id/plantSearch"
            android:layout_width="346dp"
            android:layout_height="55dp"
            android:padding="15dp"
            android:background="@drawable/translucent_edit"
            android:hint="Search"
            android:inputType="text"
            android:textSize="24dp"
            android:singleLine="true" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/lv_plantReports" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.71" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ListView
            android:layout_width="409dp"
            android:layout_height="406dp" android:id="@+id/lv_plantReports"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/AddButton"
            android:textColor="@color/white"
            android:background="@drawable/translucent_button"
            app:layout_constraintEnd_toStartOf="@+id/BackButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/lv_plantReports" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.349"/>
    <Button
            android:text="Return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/BackButton"
            android:textColor="@color/white"
            android:background="@drawable/translucent_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/lv_plantReports" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>